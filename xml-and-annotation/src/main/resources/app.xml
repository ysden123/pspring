<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <context:annotation-config/>
    <!--SQL data processing-->
    <bean id="sqlProcessor" class="com.stulsoft.pspring.scala.service.Processor" autowire="byType">
        <property name="dataSource" ref="sqlDataSource"/>
    </bean>
    <bean id="sqlDataSource" class="com.stulsoft.pspring.scala.data.SqlSource" autowire="byType"/>
    <bean id="sqlDataProvider" class="com.stulsoft.pspring.scala.data.SqlDataProvider" autowire="byType"/>

    <!--File data processing-->
    <bean id="fileProcessor" class="com.stulsoft.pspring.scala.service.Processor" autowire="byType">
        <property name="dataSource" ref="fileDataSource"/>
    </bean>
    <bean id="fileDataSource" class="com.stulsoft.pspring.scala.data.FileSource" autowire="byType"/>
    <bean id="fileDataProvider" class="com.stulsoft.pspring.scala.data.FileDataProvider" autowire="byType"/>
</beans>
